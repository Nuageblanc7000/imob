{% extends 'base.html.twig' %}

{% block title %}
  Hello HomeController!
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row gap-lg-4">
      {% for property in properties %}
        <a href="{{path("show_prop",{'id': property.id})}}" class="col-xl-2 col-lg-3 col-md-3 p-0">
          <div class="card w-100">
            <img class="card-img-top" src="{{ property.images[0].path }}" alt="Card image cap " />
            <div class="card-body">
              <p class="card-title mb-0 fw-bold">
                {{ property.price|number_format(0, '.', ' ', '') }}
                {% if property.state == 'louer' %}
                  €/mois
                {% else %}
                  €
                {% endif %}
              </p>

              <p class="mb-0">{{ property.category.title }}</p>
              <p class="small-text-card mb-0">{{ property.zipCode }} {{ property.city }}</p>
              {# <a href="#" class="btn btn-primary">Go somewhere</a> #}
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
